<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leaderboard">

    <TextView
        android:id="@+id/top10"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/leaderboardTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboardTop"
        android:layout_width="346dp"
        android:layout_height="213dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/top10"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/top10"
        app:layout_constraintTop_toBottomOf="@+id/top10" />

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you are top: ???"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/leaderboardTop"
        app:layout_constraintEnd_toEndOf="@+id/leaderboardTop"
        app:layout_constraintStart_toStartOf="@+id/leaderboardTop" />
</androidx.constraintlayout.widget.ConstraintLayout>